{
  "functions": {
    "predeploy": "pnpm --prefix \"$RESOURCE_DIR\" run build",
    "source": ".",
    "runtime": "nodejs20"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
